<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.application.niels.a2bfit.Activities.TrainingDetailsActivity">

    <TextView
        android:id="@+id/tvTrainingsDetails"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Trainingsdetails"
        android:textColor="@color/colorBFitLogoOranje"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tvTotaalAantalOefeningen" />

    <Spinner
        android:id="@+id/TrainingSpinner"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDatumVanTraining" />

    <TextView
        android:id="@+id/tvDatumVanTraining"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Datum van training:"
        android:textColor="@color/colorBFitLogoOranje"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvTotaalAantalHerhalingen"
        android:layout_width="280dp"
        android:layout_height="25dp"
        android:text="Totaal aantal herhalingen:"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/etTotaalAantalHerhalingen"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/etTotaalGewicht"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:drawableStart="@drawable/ic_fitness_center_black"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        android:longClickable="false"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/tvTotaalGewicht"
        android:layout_width="280dp"
        android:layout_height="25dp"
        android:text="Totaal gewicht:"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/etTotaalGewicht"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/etTotaalAantalHerhalingen"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:drawableStart="@drawable/ic_replay_black"
        android:inputType="text"
        android:layout_marginBottom="8dp"
        android:longClickable="false"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintBottom_toTopOf="@+id/tvTotaalGewicht"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/tvTotaalAantalOefeningen"
        android:layout_width="280dp"
        android:layout_height="25dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:text="Totaal aantal oefeningen:"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/etTotaalAantalOefeningen"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/etTotaalAantalOefeningen"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:drawableStart="@drawable/ic_exercise_black"
        android:ems="10"
        android:inputType="text"
        android:layout_marginLeft="8dp"
        android:longClickable="false"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tvTotaalAantalHerhalingen" />

</android.support.constraint.ConstraintLayout>
