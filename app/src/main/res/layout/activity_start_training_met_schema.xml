<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.application.niels.a2bfit.Activities.StartTrainingMetSchemaActivity">


    <TextView
        android:id="@+id/tvSchemaType"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Schema"
        android:textColor="@color/colorBFitLogoOranje"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/etGewicht"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Gewicht"
        android:drawableLeft="@drawable/ic_fitness_center_black"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_fitness_center_black"
        android:inputType="number"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/etDatum" />

    <EditText
        android:id="@+id/etDatum"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="date"
        android:hint="Datum"
        android:drawableLeft="@drawable/ic_date_range_black"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_date_range_black"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnOefeningAfvinken" />

    <Button
        android:id="@+id/btnOefeningAfvinken"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="Oefening afvinken"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.508" />

    <ListView
        android:id="@+id/lvOefeningenVanSchema"
        android:layout_width="280dp"
        android:choiceMode="singleChoice"
        android:listSelector="#ff8d05"
        android:layout_height="271dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSchemaType"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/etGewicht" />

</android.support.constraint.ConstraintLayout>
