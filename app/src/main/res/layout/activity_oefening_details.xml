<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.application.niels.a2bfit.Activities.OefeningDetailsActivity">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/appCompatImageView"
        android:layout_width="343dp"
        android:layout_height="140dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/bfit_logo"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp">
    </android.support.v7.widget.AppCompatImageView>

    <TextView
        android:id="@+id/tvOefeningNaam"
        android:layout_width="351dp"
        android:layout_height="37dp"
        android:text="OefeningNaam"
        android:textAlignment="center"
        android:textColor="#ff8d05"
        android:textSize="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/OefeningImageView"
        android:layout_width="343dp"
        android:layout_height="250dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/OefeningenIMG/BenchPress.png"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOefeningNaam">
    </android.support.v7.widget.AppCompatImageView>

    <TextView
        android:id="@+id/tvAantalSets"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Sets"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OefeningImageView" />

    <TextView
        android:id="@+id/tvAantalReps"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Reps"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OefeningImageView" />

</android.support.constraint.ConstraintLayout>
