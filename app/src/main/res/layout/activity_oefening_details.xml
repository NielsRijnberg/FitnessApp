<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.application.niels.a2bfit.Activities.OefeningDetailsActivity">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/appCompatImageView"
        android:layout_width="280dp"
        android:layout_height="140dp"
        android:src="@drawable/bfit_logo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent">
    </android.support.v7.widget.AppCompatImageView>

    <TextView
        android:id="@+id/tvOefeningNaam"
        android:layout_width="280dp"
        android:layout_height="37dp"
        android:text="OefeningNaam"
        android:textAlignment="center"
        android:textColor="#ff8d05"
        android:textSize="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="280dp"
        android:layout_height="195dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/OefeningImageView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvOefeningNaam" />

    <TextView
        android:id="@+id/tvOefeningOmschrijving"
        android:layout_width="280dp"
        android:layout_height="102dp"
        android:text="'omschrijving van oefening'"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

</android.support.constraint.ConstraintLayout>
